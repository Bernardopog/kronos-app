generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  username String @unique
  email String @unique
  displayName String?
  password String

  todoTask Todo[]
  todoCategories Category[]
  notes Note[]
  tags Tag[]
  kanbans Kanban[]
  columns Column[]
  kanbanTasks KanbanTask[]
  authorizedKanbans AuthorizedUser[]
}

enum TodoPriority {
  level_0
  level_1
  level_2
  level_3
  level_4
  level_5
}

model Todo {
  id String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  title String
  description String?
  priority TodoPriority
  creationDate DateTime @default(now())
  isCompleted Boolean @default(false)

  userId String @db.Uuid
  user User @relation(fields: [userId], references: [id])

  categoryId String? @db.Uuid
  category Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  title String

  userId String @db.Uuid
  user User @relation(fields: [userId], references: [id])

  tasks Todo[]
}

model Note {
  id String @id @db.Uuid @default(uuid())
  title String @default("Nova Nota")
  description String?
  isFavorite Boolean @default(false)
  creationDate DateTime @default(now())
  updateDate DateTime?
  icon String?

  userId String @db.Uuid
  user User @relation(fields: [userId], references: [id])

  tags NoteTag[]
}

model NoteTag {
  noteId String @db.Uuid
  note Note @relation(fields: [noteId], references: [id])

  tagId String @db.Uuid
  tag Tag @relation(fields: [tagId], references: [id])

  @@id([noteId, tagId])
}

model Tag {
  id String @id @db.Uuid @default(uuid())
  tagName String
  
  userId String @db.Uuid
  user User @relation(fields: [userId], references: [id])

  notes NoteTag[]
}

enum RoleType {
  admin
  write
  read
}

model AuthorizedUser {
  id String @id @db.Uuid @default(uuid())

  role RoleType

  userId String @db.Uuid
  user User @relation(fields: [userId], references: [id])

  kanbanId String? @db.Uuid
  kanban Kanban? @relation(fields: [kanbanId], references: [id])
}

model Kanban {
  id String @id @db.Uuid @default(uuid())
  title String
  
  userId String @db.Uuid
  user User @relation(fields: [userId], references: [id])
  
  columns Column[]
  authorizedUsers AuthorizedUser[]
}

model Column {
  id String @id @db.Uuid @default(uuid())
  columnName String
  color Json @default("[0,0,10]")
  icon String?
  createAt DateTime @default(now())

  tasks KanbanTask[]

  userId String @db.Uuid
  user User @relation(fields: [userId], references: [id])

  kanbanId String @db.Uuid
  kanban Kanban @relation(fields: [kanbanId], references: [id])
}

enum TaskPriorityType {
  low
  medium
  high
}

model KanbanTask {
  id String @id @db.Uuid @default(uuid())
  taskName String
  description String?
  creationDate DateTime @default(now())
  completionDate DateTime?
  isCompleted Boolean @default(false)

  priority TaskPriorityType @default(low)

  userId String @db.Uuid
  user User @relation(fields: [userId], references: [id])

  columnId String @db.Uuid
  column Column @relation(fields: [columnId], references: [id])
  
  team String[]
}